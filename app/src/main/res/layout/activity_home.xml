<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mentorsschool.logindemoapp.Home"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="83dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToAddLog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToAddLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="4dp"
        android:text="Add Log"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToViewLogs"
        app:layout_constraintStart_toStartOf="@+id/btnGoToViewLogs"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <Button
        android:id="@+id/btnGoToViewLogs"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="16dp"
        android:text="View Logs"
        app:layout_constraintBottom_toTopOf="@+id/btnViewPts"
        app:layout_constraintStart_toStartOf="@+id/btnViewPts"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToAddLog" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="20dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnViewPts"
        app:layout_constraintTop_toBottomOf="@+id/btnViewPts" />

    <Button
        android:id="@+id/btnViewPts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="View Patients"
        app:layout_constraintBottom_toTopOf="@+id/btnLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToViewLogs" />
</android.support.constraint.ConstraintLayout>
